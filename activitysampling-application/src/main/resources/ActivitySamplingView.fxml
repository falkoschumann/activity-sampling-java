<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root fx:id="stage" title="Activity Sampling" type="Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.application.ActivitySamplingView">
   <scene>
      <Scene stylesheets="@style.css">
         <root>
            <VBox>
              <children>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                  <menus>
                    <Menu mnemonicParsing="false" text="File">
                      <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleQuit" text="Quit" />
                      </items>
                    </Menu>
                        <Menu mnemonicParsing="false" text="Notifications">
                           <items>
                              <Menu mnemonicParsing="false" text="Start">
                                 <items>
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart5min" text="5 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart10min" text="10 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart15min" text="15 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart20min" text="20 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart30min" text="30 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart60min" text="60 min" />
                                    <MenuItem mnemonicParsing="false" onAction="#handleStart1min" text="1 min" />
                                 </items>
                              </Menu>
                              <MenuItem mnemonicParsing="false" onAction="#handleStop" text="Stop" />
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="View">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                           </items>
                        </Menu>
                  </menus>
                </MenuBar>
                  <BorderPane VBox.vgrow="ALWAYS">
                     <center>
                        <ListView fx:id="recentActivities" BorderPane.alignment="CENTER" />
                     </center>
                     <top>
                        <VBox spacing="8.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Activity:" />
                              <TextField fx:id="activity" onAction="#handleLog" promptText="What are you working on?" />
                              <Button fx:id="logButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLog" text="Log" />
                              <Label fx:id="countdownLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="00:00:00" />
                              <ProgressBar fx:id="countdown" maxWidth="1.7976931348623157E308" prefWidth="200.0" progress="0.0" />
                           </children>
                           <BorderPane.margin>
                              <Insets bottom="8.0" />
                           </BorderPane.margin>
                        </VBox>
                     </top>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </BorderPane>
              </children>
            </VBox>
         </root>
      </Scene>
   </scene>
</fx:root>
