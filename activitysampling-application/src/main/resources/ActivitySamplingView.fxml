<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root fx:id="stage" title="Activity Sampling" type="Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.application.ActivitySamplingView">
   <scene>
      <Scene stylesheets="@style.css">
         <root>
            <VBox>
              <children>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                  <menus>
                    <Menu mnemonicParsing="false" text="File">
                      <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleQuit" text="Quit" />
                      </items>
                    </Menu>
                  </menus>
                </MenuBar>
                  <BorderPane VBox.vgrow="ALWAYS">
                     <center>
                        <ListView fx:id="recentActivities" BorderPane.alignment="CENTER" />
                     </center>
                     <top>
                        <VBox spacing="8.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Activity:" />
                              <TextField fx:id="activity" onAction="#handleLog" promptText="What are you working on?" />
                              <Button fx:id="logButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLog" text="Log" />
                           </children>
                           <BorderPane.margin>
                              <Insets bottom="8.0" />
                           </BorderPane.margin>
                        </VBox>
                     </top>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </BorderPane>
              </children>
            </VBox>
         </root>
      </Scene>
   </scene>
</fx:root>
